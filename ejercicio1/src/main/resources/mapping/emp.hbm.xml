<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="model.Emp" table="EMP">

        <!-- Primary Key-->
        <id name="empno" column="EMPNO" type="integer"/>
        <!-- Resto Campos-->
        <property name="ename"      column="ENAME" type="string"/>
        <property name="job"        column="JOB" type="string"/>
        <property name="mgr"        column="MGR" type="integer"/>
        <property name="hiredate"   column="HIREDATE" type="date"/>
        <property name="sal"        column="SAL" type="big_decimal"/>
        <property name="comm"       column="COMM" type="big_decimal"/>
        <property name="deptno"     column="DEPTNO" type="integer"/>

    </class>
</hibernate-mapping>